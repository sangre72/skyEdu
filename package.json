{
  "name": "skyedu",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev --prefix frontend",
    "dev:admin": "npm run dev:admin --prefix frontend",
    "dev:all": "npm run dev:all --prefix frontend",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --port 8000",
    "dev:full": "concurrently -n \"BACKEND,USER,ADMIN\" -c \"green,cyan,magenta\" \"npm run dev:backend\" \"npm run dev --prefix frontend\" \"npm run dev:admin --prefix frontend\"",
    "build": "npm run build --prefix frontend",
    "start": "npm run start --prefix frontend",
    "start:admin": "npm run start:admin --prefix frontend",
    "start:all": "npm run start:all --prefix frontend",
    "lint": "npm run lint --prefix frontend",
    "lint:fix": "npm run lint:fix --prefix frontend",
    "test": "npm run test --prefix frontend",
    "install:all": "npm install --prefix frontend && cd backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
